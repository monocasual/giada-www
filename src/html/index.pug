extends base

include mixins/news

block metas
	meta(property='og:title' content=`${CONSTANTS.title}`)
	meta(property='og:type' content='website')
	meta(property='og:image' content=`${CONSTANTS.url}/images/${CONSTANTS.social_image}`)
	meta(property='og:url' content=`${CONSTANTS.url}`)
	meta(property='og:description' content=`${CONSTANTS.description}`)
	meta(property='fb:app_id' content=`${CONSTANTS.facebook_app_id}`)
	meta(name='twitter:card' content='summary')
	meta(name='twitter:url' content=`${CONSTANTS.url}`)
	meta(name='twitter:title' content=`${CONSTANTS.title}`)
	meta(name='twitter:description' content=`${CONSTANTS.description}`)
	meta(name='twitter:image' content=`images/${CONSTANTS.social_image}`)

block content
	.container

		//- Intro

		.row.margin-top-xl
			.col-md-12
				h1.text-center Your hardcore loop machine.
				h2.margin-top-xl.description #{CONSTANTS.description}
	
	//- Hero space

	.container-fluid.news-list.hero-space
		.row
			.col-sm-12
				.container
					.row
						.col-md-12
							img(alt='*' src='images/giada-canvas.png')

	.container.main-features

		.row.center-block.margin-top-xl
			.col-md-12
				h4.text-center
					a.see-it-in-action(href='http://www.youtube.com/user/GiadaLoopMachine' target='_blank') see it in action!

		//- Main features

		.row.center-block.margin-top-xl
			.col-md-4
				h3
					img.margin-right-s(alt='*' src='images/icon-box.svg')
					| Your sample player
				p
					| Load samples from your crates and play them with a computer keyboard or a MIDI controller. 
			.col-md-4
				h3
					img.margin-right-s(alt='*' src='images/icon-circle.svg')
					| Your loop machine
				p
					| Build your performance in real time by layering audio tracks or MIDI events, driven by the main sequencer.
			.col-md-4
				h3
					img.margin-right-s(alt='*' src='images/icon-lines.svg')
					| Your song editor
				p
					| Write songs from scratch or edit existing live recordings with the powerful Action Editor, for a fine-tuned control.
		.row.center-block
			.col-md-4
				h3
					img.margin-right-s(alt='*' src='images/icon-record.svg')
					| Your live recoder
				p
					| Record sounds from the real world and MIDI events coming from external devices or other apps.
			.col-md-4
				h3
					img.margin-right-s(alt='*' src='images/icon-diamond.svg')
					| Your FX processor
				p
					| Process samples or audio/MIDI input signals with VST instruments from your plug-ins collection.
			.col-md-4
				h3
					img.margin-right-s(alt='*' src='images/icon-knob.svg')
					| Your MIDI controller
				p
					| Control other softwares or synchronize physical MIDI devices by using Giada as a MIDI master sequencer.	

		//- Detail features

		.row.center-block.margin-top-xl
			.col-md-3
				h4
					| Lightweight and powerful
			.col-md-3
				h4
					| VST and MIDI support
			.col-md-3
				h4
					| Designed for live performances
			.col-md-3
				h4
					| Powerful multi-threaded audio engine
		.row.center-block
			.col-md-3
				h4
					| Super sleek interface, no exotic stuff
			.col-md-3
				h4
					| Tons of tools to edit your songs
			.col-md-3
				h4
					| 100% open-source GPL
			.col-md-3
				h4
					| For Linux, Windows, macOS and FreeBSD

		
		//- Quotes

		.quotes.row.margin-top-xl
			.col-md-6.col-md-offset-3
				p
					i “This software is f*cking awesome.”
					| ― Cinderskull27
				p
					i “Giada is one of the best open platform audio tool out there.”
					| ― blinkworth1
				p
					i “Discovering Giada has completely changed my life.”
					| ― D1RTY J0E
		
		//- Download button

		.row.margin-top-xl
			.col-md-12
				a(href='download')
					input.download-btn.btn.btn-default.center-block(type='button' value='Download it!')
				.text-center.margin-top-s
					| latest version: #{RELEASE.version} “#{RELEASE.codename}”
		
		//- Sharing area

		.row
			.col-md-10.col-md-offset-1
				h2.margin-top-xl.text-center Sharing is caring!
				.list-inline.text-center.margin-top-xl 
					include includes/socials/facebook-like
					include includes/socials/twitter-like
					include includes/socials/reddit
					include includes/socials/flattr
					include includes/socials/github

	//- News list

	.container-fluid.news-list
		.row
			.col-sm-12
				.container
					.row
						.col-md-10.col-md-offset-1
							h2.margin-top-xl.text-center Latest news from our laboratories.
							each news in NEWS.slice(0, 5)
								+news(news.date, news.title, news.body)
